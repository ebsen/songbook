doctype html
html
  
  head
    title Christian Songs for Little Children
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    //- Stylesheets and things
    link(rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css")
    link(rel="stylesheet", href="styles/main.css")
  
  body

    #layout
      a#menuLink.menu-link(href="#menu")
        span

      #menu
        .pure-menu.pure-menu.open
          a.pure-menu-heading(href="#") Songs
          ul.navigation
            each song in songs
              //- li classes: menu-item-divided pure-menu-selected
              li: a(href="##{song.id}") #{song.title}

      #main 
        .header
          h1 Christian Songs
          h2 for Little Children
        != yield
        
    script(src="scripts/ui.js")
